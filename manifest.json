{

  "manifest_version": 2,
  "name": "LittleSis Add-On",
  "version": "0.1",

  "description": "Browser tool for quickly adding information to the LittleSis database.",

  "icons": {
    "48": "icons/icon@48.png",
    "96": "icons/icon@96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*/"],
      "js": ["main.js"]
    }
  ],

  "browser_action": {
    "default_icon": "icons/icon@48.png",
    "default_title": "LittleSis",
    "default_popup": "popup/littlesis.html"
  }

}